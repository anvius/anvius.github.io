---
layout: nil
---
<?xml version="1.0"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title }}</title>
    <link>http://ant.onio.org/</link>
    <atom:link href="http://example.com/rss.xml" rel="self" type="application/rss+xml" />
    <description>ant.onio.org : {{ site.title }}</description>
    <language>es_es</language>
    <pubDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
    <lastBuildDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %z" }}</lastBuildDate>

    {% for post in site.posts limit:10 %}
    <item>
      <title>{{ post.title }}</title>
      <link>http://ant.onio.org{{ post.url }}</link>
      <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
      <author>{% if post.author %}{{ post.author }}{% else %}{{ site.author }}{% endif %}</author>
      <guid>http://ant.onio.org{{ post.id }}</guid>
      <description>{{ post.content |  truncatewords : '100' | xml_escape }}{{ " [ <a href='http://" | xml_escape }}{{ site.domain }}{{ post.url }}{{ "'>Continuar leyendo...</a> ]" | xml_escape }}</description>
    </item>
    {% endfor %}

  </channel>
</rss>
