---
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

 <title>{{ site.title }}</title>
 <link href="http://{{ site.domain }}/atom.xml" rel="self"/>
 <link href="http://{{ site.domain }}/"/>
 <updated>{{ site.time | date_to_xmlschema }}</updated>
 <id>http://{{ site.domain }}/</id>
 <author>
   <name>{% if post.author %}{{ post.author }}{% else %}{{ site.author }}{% endif %}</name>
   <email>{{ site.email }}</email>
 </author>

 {% for post in site.posts limit:10 %}
 <entry>
   <title>{{ post.title }}</title>
   <link href="http://{{ site.domain }}{{ post.url }}"/>
   <updated>{{ post.date | date_to_xmlschema }}</updated>
   <id>http://{{ site.domain }}{{ post.id }}</id>
   <content type="html">{{ post.content |  truncatewords : '100' | xml_escape }}{{ " [ <a href='http://" | xml_escape }}{{ site.domain }}{{ post.url }}{{ "'>Continuar leyendo...</a> ]" | xml_escape }}</content>
 </entry>
 {% endfor %}

</feed>
